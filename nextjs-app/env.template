# ===================================
# Shooting Club App - Environment Variables Template
# ===================================
# COPY THIS FILE TO .env.local AND FILL IN YOUR VALUES
# Command: cp env.template .env.local
# NEVER commit .env.local to git!

# ===================================
# PostgreSQL Database (Application)
# ===================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=shooting_club
DB_USER=dbuser
DB_PASSWORD=your-secure-password-here

# ===================================
# Meyton MySQL Database (Read-Only)
# ===================================
# Connect to your existing Meyton system database
MEYTON_DB_HOST=192.168.1.100
MEYTON_DB_PORT=3306
MEYTON_DB_NAME=SSMDB2
MEYTON_DB_USER=readonly
MEYTON_DB_PASSWORD=your-meyton-password-here

# ===================================
# JWT Authentication
# ===================================
# Generate a secure random string:
# openssl rand -base64 32
JWT_SECRET=your-jwt-secret-key-min-32-characters-long

# JWT Token Expiration (optional)
# Examples: '1h', '7d', '30d'
JWT_EXPIRES_IN=7d

# ===================================
# Application Settings
# ===================================
# Development or Production
NODE_ENV=development

# Base URL for the application
NEXT_PUBLIC_APP_URL=http://localhost:3000

# API Base URL (usually same as APP_URL)
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# ===================================
# Email Settings (Optional - Future Use)
# ===================================
# For user notifications
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=noreply@shooting-club.com
# SMTP_PASSWORD=your-smtp-password
# SMTP_FROM=Shooting Club <noreply@shooting-club.com>

# ===================================
# Logging & Monitoring (Optional)
# ===================================
# LOG_LEVEL=info
# SENTRY_DSN=your-sentry-dsn-here

# ===================================
# Redis Cache (Optional - Future Use)
# ===================================
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=your-redis-password

# ===================================
# Feature Flags (Optional)
# ===================================
# ENABLE_REGISTRATION=true
# ENABLE_EMAIL_NOTIFICATIONS=false
# ENABLE_ANALYTICS=false

